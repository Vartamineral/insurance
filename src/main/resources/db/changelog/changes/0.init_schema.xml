<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="create_table_customers" author="Oleg">
        <createTable tableName="customers">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="middle_name" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(16)">
                <constraints nullable="true"/>
            </column>
            <column name="birth_date" type="Date">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>